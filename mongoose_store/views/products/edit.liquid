{% layout "layout.liquid" %} {% block content %}
<form action="/products/{{product.id}}/?_method=PUT" method="POST">
    <input type="text" name="name" placeholder="Enter Product Name" value="{{product.name}}">
    <input type="text" name="img" placeholder="Product Image Link" value={{product.img}}>
    <input type="text" name="description" placeholder="Enter Product Description" value="{{product.descriptiom}}">
    <input type="number" name="price" placeholder="Enter Product Price" value={{product.price}}>
    <input type="number" name="qty" placeholder="Enter Product Quantity" value={{product.qty}}>
    <input type="submit" value="Submit Product Edit">
</form>
{% endblock %}