{% layout "layout.liquid" %} {% block content %}
<article>
    <h2>
        {{ Product.name }}
    </h2>
    <img src="{{Product.img}}">
        {% if Product.qty == 0 %}
        
        <div>OUT OF STOCK</div>

        {% else %}
        <div>{{Product.qty}} remaining</div>
        <button onclick='{{(Product.qty - 1)}}'>Buy</button>
        {% endif %}
    
    <h3>{{ Product.description }}</h3>
    <a href="/product/{{ product._id }}/edit"><button>Edit this product</button></a>
    <form action="/product/{{ fruit._id }}?_method=DELETE" method="POST">
        <input type="submit" value="Delete" />
    </form>
    <a href="/fruits/"><button>Back to Main</button></a>
</article>
</div>

{% endblock %}