{% layout "layout.liquid" %} {% block content %}
<article>
    <h2>{{ product.name }}</h2>
    <img src={{product.img}}>
    <h3>{{product.price}}</h3>
    <h3>{{ product.description }}</h3>
    {% if product.qty == 0 %}

        <div>OUT OF STOCK</div>

    {% else %}
        <div>{{product.qty}} remaining</div>
    <form action="/products/{{product.id}}/buy?_method=PUT" method="POST">
        <input type="submit" value="Buy">
    </form>
    {% endif %}


    <a href="/products/{{ product.id }}/edit"><button>Edit this product</button></a>
    <form action="/products/{{ product.id }}?_method=DELETE" method="POST">
        <input type="submit" value="Delete Product" />
    </form>
    <a href="/products/"><button>Back to Main</button></a>
</article>
</div>

{% endblock %}