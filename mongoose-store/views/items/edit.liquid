{% layout 'layout.liquid' %}
{% block content %}
<a href="/store/{{item._id}}"><button>Back to Item</button></a>
<h1>Editing {{item.name}}</h1>
<form action="/store/{{item._id}}/edit" method="POST">
    Name:
    <input type="text" name="name" id="" value="{{item.name}}">
    Description:
    <input type="text" name="description" id="" value="{{item.description}}">
    Image URL:
    <input type="text" name="img" id="" value="{{item.img}}">
    Price:
    <input type="text" name="price" id="" value="{{item.price}}">
    Quantity:
    <input type="text" name="qty" id="" value="{{item.qty}}">
    <input type="submit" value="Submit Changes">
</form>
{% endblock %}