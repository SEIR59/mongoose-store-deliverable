{% layout "layout.liquid" %} {% block content %}
      <div>
        <article>
          <h2>
            {{ p.name }} -
                {% if p.qty <= 0 %} OUT OF STOCK {% else %} {{p.qty}} remaining 
                  <br/>
            {% comment %}method=PUT overwriteform method only post/get{% endcomment %}
                  <form action="/products/{{ p._id }}?_method=PUT" method="POST">
                    <input type="submit" value="BUY" />
                  </form>                 
                {% endif %}
          </h2>
          <img src="{{p.img}}" alt="{{p.name}}">
          <h3>$Price$: {{ p.price }}</h3>
          <h3>{{p.description}}</h3>
          <a href="/products/{{ p._id }}/edit"><button>Edit</button></a>
          <form action="/products/{{ p._id }}?_method=delete" method="POST">
            <input type="submit" value="Delete" />
          </form>
          <a href="/products/"><button>Back to Main Page</button></a>
        </article>
      </div>
{% endblock %}
