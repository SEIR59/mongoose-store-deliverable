{% layout "layout.liquid" %} {% block content %}
      <div>
        <article>
          <h2>
            {{ p.name }} -
                {% if p.qty <= 0 %} OUT OF STOCK {% else %} {{p.qty}} remaining {% endif %}
          </h2>
          <img src="{{p.img}}" alt="{{p.name}}">
          <h3>$Price$: {{ p.price }}</h3>
          <h3>{{p.description}}</h3>
         
          <a href="/products/"><button>Back to Main</button></a>
        </article>
      </div>
{% endblock %}
