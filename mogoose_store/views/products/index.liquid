{% layout "layout.liquid" %} {% block content %}
<div>
  {% comment %} <a href="/products/new"><button>Create A New Cheeeeewy</button></a> {% endcomment %}


  {% for p in products %}
  <article>
    <a href="/products/{{ p._id }}">
      <h2>
        {% if p.qty <= 0 %} OUT OF STOCK {% else %} {{p.qty}} remaining {% endif %}
      </h2>
    </a>
  </article>
  {% endfor %}
</div>
{% endblock %}
