{% layout "layout.liquid" %} {% block content %}
<div>
    <form action="/products/{{p._id}}?_method=PUT" method="post">
    <fieldset>
      <legend>Edit {{p.name}} </legend>
      <label>
        NAME:<input type="text" name="name" value="{{p.name}}" placeholder="edit name" />
      </label>
      <label>
        Quantity:<input type="number" name="qty" value="{{p.qty}}" placeholder="edit qty not smaller than 0" />
      </label>
      <label>
        Price:<input type="number" name="price" value="{{p.price}}" placeholder="edit price not smaller than 0" /> 
      </label>
      <label>
        Description:<input type="text" name="description" value="{{p.description}}" placeholder="edit description" /> 
      </label>

      <label>
        ImgURL:<input type="url" name="img" value="{{p.img}}" placeholder="edit image" /> 
      </label>

    </fieldset>
    <input type="submit" value="Edit {{p.name}}" />
  </form>
</div>
{% endblock %}
