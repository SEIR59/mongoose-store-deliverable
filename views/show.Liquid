{%layout 'layout.liquid'%} {%block content%}
<div>
    <article>
        <img src="{{product.img}}" alt="{{product.name}} image">
        <h1>{{product.name}}</h1>
        <br>
        Description: {{product.description}}
        <br>
        Price: {{product.price}}
        <br>
        {% if product.qty > 0%} 
        Remaining Supply: {{product.qty}}
        <br>
        <a href="/products/{{product._id}}/buy">Add Item To Cart?</a>
        {% else %} This item is out of stock!
        {% endif %}
        <br>
        <a href="/products/{{product._id}}/edit"><button>Edit</button></a>
        <form action="/products/{{product._id}}?method_DELETE" method="POST">
            <input type="submit" value="Delete">
        </form>
        <a href="/products"><button>Back to shop</button></a>
        <br>
        
    </article>
</div>
{%endblock%}