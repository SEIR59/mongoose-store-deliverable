{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/products" method="post">
    <fieldset>
      <legend>Add a new product</legend>
      <label>
        NAME:<input type="text" name="name" placeholder="Enter product" />
      </label>
      <label>
        Description:<input type="text" name="description" placeholder="Enter description" />
      </label>
      <label>
        Image Link:<input type="text" name="img" placeholder="Enter image link" />
      </label>
      <label>
        Price:<input type="text" name="price" placeholder="Enter price" />
      </label>
      <label>
        Quantity:<input type="text" name="qty" placeholder="Enter remaining stock" />
      </label>
    </fieldset>
    <input type="submit" value="Add new product" />
  </form>
</div>
{% endblock %}