{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/products" method="POST">
    <fieldset>
      <legend>Create a New Products</legend>
      <label>
        NAME:<input type="text" name="name" placeholder="enter product name" />
      </label>
      <label>
        DESCRIPTION:<input
          type="text"
          name="description"
          placeholder="enter product description"
        />
      </label>
      <label>
        IMG URL:<input
          type="text"
          name="img"
          placeholder="enter product IMG URL"
        />
      </label>
      <label>
        PRICE:<input
          type="text"
          name="price"
          placeholder="enter product price"
        />
      </label>
      <label>
        QUANTITY:<input
          type="text"
          name="qty"
          placeholder="enter product quantity"
        />
      </label>
    </fieldset>
    <input type="submit" value="create new product" />
  </form>
</div>
{% endblock %}
