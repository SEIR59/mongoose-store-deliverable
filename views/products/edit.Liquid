{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/products/{{product._id}}?_method=PUT" method="post">
    <fieldset>
      <legend>Edit {{product.name}}</legend>
      <label>
        NAME:<input type="text" name="name" value= "{{product.name}}" />
      </label>
      <label>
        DESCRIPTION:<input
          type="text"
          name="description"
          value= '{{product.description}}'
        />
      </label>
      <label> IMG URL:<input type="text" name="img" value="{{product.img}}"> </label>
      <label> PRICE:<input type="text" name="price" value="{{product.price}}"/> </label>
      <label> QTY:<input type="text" name="qty" value="{{product.qty}}"/> </label>
    </fieldset>
    <input type="submit" value="Edit {{product.name}}" />
  </form>
</div>
{% endblock %}