{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/fruits/{{product._id}}?_method=PUT" method="post">
    <fieldset>
      <legend>Edit {{product.name}}</legend>
      <label>
        NAME:<input
          type="text"
          name="name"
          placeholder="enter fruit name"
          value="{{product.name}}"
        />
      </label>
      <label>
        DESCRIPTIONS:<input
          type="text"
          name="color"
          placeholder="enter fruit name"
          value="{{product.color}}"
        />
      </label>
      <label>
        READY TO EAT:<input type="checkbox" name="readyToEat" {% if
        fruit.readyToEat == true %} checked {% endif %} />
      </label>

      name: "Beans",
      description:
        "A small pile of beans. Buy more beans for a big pile of beans.",
      img: "https://imgur.com/LEHS8h3.png",
      price: 5,
      qty: 99,


    </fieldset>
    <input type="submit" value="Edit {{product.name}}" />
  </form>
</div>
{% endblock %}
