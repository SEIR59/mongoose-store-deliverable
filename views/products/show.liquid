{% layout "layout.liquid" %} {% block content %}
<div>
  <article>
    <!-- <h2>
      {{ product.name }}
    </h2> -->
    <div class="card" style="width: 18rem">
      <h2 class="card-title">{{ product.name }}</h2>
      <img src="{{ product.img }}" class="card-img-top" />
      <div class="card-body">
        <p class="card-text">
          {{ product.description }}
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Price: ${{ product.price }}</li>

        <!-- Start if logic here for quantity -->
        {% if product.qty > 0 %}
        <li class="list-group-item">Quantity: {{ product.qty }}</li>
        <li class="list-group-item">
          <form
            action="/products/{{ product.id }}/buy?_method=PUT"
            method="post"
          >
            <input type="submit" class="btn btn-info" value="buy" />
          </form>
        </li>
        {% else %}
        <li class="list-group-item">OUT OF STOCK</li>
        {% endif %}
        <!-- end if logic here for quantity -->

        <li class="list-group-item">
          <form
            action="/products/{{ product._id }}?_method=DELETE"
            method="POST"
          >
            <input type="submit" class="btn btn-danger" value="DELETE" />
          </form>
        </li>
      </ul>
      <div class="card-body">
        <a href="/products/" class="card-link">Back to Main Trasia</a>
        <a href="/products/{{ product._id }}/edit" class="card-link"
          >Edit product</a
        >
      </div>
    </div>
