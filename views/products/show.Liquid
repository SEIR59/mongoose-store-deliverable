{% layout "layout.liquid" %} {% block content %}
<div>
  <article>
    <h2>
      {{ product.name }}
    </h2>
    <br />
    <img src="{{ product.img }}" /> <br />
    Description: {{ product.description }} <br />
    QTY: Only {{ product.qty }} {{ product.name }} left! <br />
    Price: ${{ product.price }} <br />
    <a href="/products/{{ product._id }}/edit"><button>Edit</button></a>
    <form action="/products/{{ product._id }}?_method=DELETE" method="POST">
      <input type="submit" value="Delete" />
    </form>
    <a href="/products/"><button>Back to Main</button></a>
  </article>
</div>
{% if product.qty == 0 %} Out of Stock! {% else %}
<form action="/products/{{ product._id }}/buy?_method=PUT" method="POST">
  <input type="submit" value="BUY" />
</form>
{%endif%} {% endblock %}
