{% layout "layout.liquid" %} {% block content %}
<div>
  <form action="/products/{{product._id}}?_method=PUT" method="post">
    <fieldset>
      <legend>Edit {{product.name}}</legend>
      <label>
        Name:<input
          type="text"
          name="name"
          placeholder="enter product name"
          value="{{product.name}}"
        />
      </label>
      <label>
        Description:<input
          type="text"
          name="description"
          placeholder="enter product description"
          value="{{product.description}}"
        />
      </label>
      <label>
        Image:<input
          type="text"
          name="img"
          placeholder="enter image link"
          value="{{product.img}}"
        />
      </label>
      <label>
        Price:<input
          type="text"
          name="color"
          placeholder="enter price"
          value="{{product.price}}"
        />
      </label>
      <label>
        Quantity:<input
          type="text"
          name="color"
          placeholder="enter remaining stock"
          value="{{product.qty}}"
        />
      </label>
      
    </fieldset>
    <input type="submit" value="Edit {{product.name}}" />
  </form>
</div>
{% endblock %}
